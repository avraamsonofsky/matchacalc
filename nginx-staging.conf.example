# Конфиг Nginx для стагинга: staging.commercial-invest.ru
# Скопируй на VPS в /etc/nginx/sites-available/staging.commercial-invest.ru
# После изменения: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    server_name staging.commercial-invest.ru;

    # Фронт стагинга
    root /var/www/staging/matchacalc-frontend;

    index index.html;

    # Публичные коллекции - отдельная страница
    location ~ ^/c/ {
        try_files /public_collection.html =404;
    }

    # Загруженные изображения (планировки)
    location /uploads/ {
        alias /root/matchacalc-backend-staging/matchacalc-backend/static/uploads/;
        try_files $uri =404;
    }

    # Основной фронтенд
    location / {
        try_files $uri $uri/ /index.html;
    }

    # API стагинг-бэкенда (порт 8080)
    location /api/ {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
